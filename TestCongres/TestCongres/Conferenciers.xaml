<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="TestCongres.Conferenciers">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.1*"/>
                </Grid.ColumnDefinitions>
                <Label HorizontalOptions="Center" Text="Conférenciers"></Label>
                <ImageButton Grid.Row="0" Grid.Column="1" Source="accueil.png" Clicked="btnMenuClicked"></ImageButton>
            </Grid>
            <SearchBar Grid.Row="0" Grid.Column="0" Placeholder="Rechercher un conférencier" TextChanged="searchDone"></SearchBar>
            <ListView  x:Name="GroupedView"
                GroupDisplayBinding="{Binding Categorie}"
                RowHeight="75"
                GroupShortNameBinding="{Binding TitreSommaire}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell Text="{Binding Nom}"
                        Detail="{Binding Titre}"
                        ImageSource="{Binding Photo}"
                        Height="75"
                        TextColor="#005569"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.GroupHeaderTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="5,5,5,5" BackgroundColor="#E2F5F9">
                                <Button Image="{Binding StateIcon}"
                                      BackgroundColor="Transparent"
                                      BorderColor="Transparent"
                                      BorderWidth="0"
                                      Clicked="HeaderTapped" 
                                      CommandParameter="{Binding .}"/>
                                <Label Text="{Binding CategorieNbItem}" 
                                     TextColor="#005569"
                                     FontSize="15"
                                     VerticalOptions="Center"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.GroupHeaderTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
