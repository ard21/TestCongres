<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:local="clr-namespace:TestCongres"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="TestCongres.Accueil">
    <ContentPage.Content>
        <StackLayout Padding="0,20,0,0" HorizontalOptions="Center">
            <Image Source="logo-chambre-des-notaires.png" HeightRequest="75"/>
            <Label Text="Congrès annuel 2019" HorizontalOptions="Center" FontSize="Large"></Label>
            <StackLayout x:Name="StackImage" IsVisible="True">
                <StackLayout>
                    <WebView Source="https://secure.innovision.qc.ca/demo/Images/ezgif.com-resize.gif" HeightRequest="115"></WebView>
                </StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Padding="20" Spacing="50">
                    <ImageButton Source="myAgenda.png" WidthRequest="100" Clicked="btnMyAgendaClicked"/>
                    <ImageButton Source="agenda.png" WidthRequest="100" Clicked="btnAgendaClicked"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Padding="10" Spacing="50">
                    <ImageButton Source="conferenciers.png" WidthRequest="100" Clicked="btnConferencierClicked"/>
                    <ImageButton Source="exposants.png" WidthRequest="150" Clicked="btnExposantClicked" />
                </StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Padding="10" Spacing="50">
                    <ImageButton Source="maps.png" WidthRequest="100" Clicked="btnMapsClicked" />
                    <ImageButton Source="download.png" WidthRequest="100" Clicked="btnDownloadClicked"/>
                </StackLayout>
            </StackLayout>
            <StackLayout Padding="20" x:Name="StackBarCode" IsVisible="False" HorizontalOptions="Center" >
                <Label Text="*C0818-94*" FontSize="60" FontFamily="c39hrp36dltt"></Label>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>