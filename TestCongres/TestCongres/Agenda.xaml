<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="TestCongres.Agenda">
    <ContentPage.Content>
        <RelativeLayout BackgroundColor="#F0F0F0">
            <Image x:Name="back_header"
                   Source="back_header_Menu.png"
                    MinimumHeightRequest="300"
                       RelativeLayout.WidthConstraint=
                        "{ConstraintExpression Type=RelativeToParent, Property=Width}"/>
            <Button Text="Horaire"
                    TextColor="White"
                    CornerRadius="20"
                    WidthRequest="102"
                    BackgroundColor="#7A7F9D"
                    Pressed="btnHoraire"
                    RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                        Property=Height,Factor=.04,Constant=0}"
                    RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                        Property=Width,Factor=.5,Constant=-112}"/>
            <Button Text="Conférenciers"
                    TextColor="White"
                    WidthRequest="102"
                    CornerRadius="20"
                    BackgroundColor="#7A7F9D"
                    Pressed="btnConferencier"
                    RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                        Property=Height,Factor=.04,Constant=0}"
                    RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                        Property=Width,Factor=.5,Constant=10}"/>
            <ImageButton HorizontalOptions="End"
                    Source="stop.png"
                    Pressed="btnBack"
                    HeightRequest="40"
                    WidthRequest="40"        
                    RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, 
                                                                      Property=Width, 
                                                                      Constant=-45}"
                    RelativeLayout.YConstraint="{ConstraintExpression Type=Constant, 
                                                                      Constant=15}"/>
            <StackLayout RelativeLayout.YConstraint="{ConstraintExpression 
                            Type=RelativeToView,
                            ElementName=back_header,
                            Property=Y,
                            Factor=1,
                            Constant=150}">
                <CollectionView ItemsSource="{Binding Calendriers}"
                          IsVisible="True"
                          x:Name="lvHoraire"
                                SelectionMode="Single"
                                SelectionChanged="OnCollectionViewSelectionChanged"
                                IsGrouped="False"
                                Margin="10,0,10,0"
                                BackgroundColor="#F0F0F0">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout  Orientation="Vertical"
                                            ItemSpacing="10" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                                <Frame BackgroundColor="#FFFFFF"
                                       CornerRadius="20"
                                       BorderColor="#FFFFFF" 
                                       Margin="10"
                                       HasShadow="False">
                                    <Grid Margin="0,0,0,1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.65*" />
                                            <ColumnDefinition Width="0.35*" />
                                        </Grid.ColumnDefinitions>
                                        <Label Text="{Binding Name}"
                                           Grid.Row="0"
                                           Grid.Column="0"
                                           FontAttributes="Bold" />
                                        <Grid HorizontalOptions="End"
                                              Grid.Row="0"
                                              Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <ImageButton Grid.Row="0"
                                                         Grid.Column="0"
                                                         HorizontalOptions="End"
                                                         Source="icon_FavOFF.png" 
                                                         Pressed="btnFavoris"/>
                                            <StackLayout Grid.Row="1"
                                                         Grid.Column="0"
                                                         Orientation="Horizontal"
                                                         HorizontalOptions="End">
                                                            <Image Source="icon_lieu.png"/>
                                                            <Label TextColor="#FFB53F"
                                                                   FontSize="Small"
                                                                   Text="{Binding Location}"/>
                                            </StackLayout>
                                            <StackLayout Grid.Row="2"
                                                         Grid.Column="0"
                                                         Orientation="Horizontal"
                                                         HorizontalOptions="End">
                                                            <Image Source="icon_heure.png"/>
                                                            <Label TextColor="#FFB53F"
                                                                   FontSize="Small"
                                                                   Text="{Binding Hour}"/>
                                            </StackLayout>
                                        </Grid>
                                    </Grid>
                                </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <CollectionView ItemsSource="{Binding Calendriers}"
                          IsVisible="False"
                          x:Name="lvConferenciers"
                                SelectionMode="Single"
                                SelectionChanged="OnCollectionViewSelectionChanged"
                                IsGrouped="False"
                                Margin="10,0,10,0"
                                BackgroundColor="#F0F0F0">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout  Orientation="Vertical"
                                            ItemSpacing="10" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                                <Frame BackgroundColor="#FFFFFF"
                                       CornerRadius="20"
                                       BorderColor="#FFFFFF" 
                                       Margin="10"
                                       HasShadow="False">
                                    <Grid Margin="0,0,0,1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.25*" />
                                            <ColumnDefinition Width="0.40*"/>
                                            <ColumnDefinition Width="0.35*" />
                                        </Grid.ColumnDefinitions>
                                        <Image Source="{Binding ImageUrl}"
                                            Grid.RowSpan="2"
                                            Grid.Column="0"
                                            WidthRequest="80"
                                            HeightRequest="90"
                                            BackgroundColor="#FFFFFF"/>
                                        <Label Text="{Binding Name}"
                                               Grid.Row="0"
                                               Grid.Column="1"
                                               FontAttributes="Bold" />
                                        <Label TextColor="#FFB53F"
                                               Grid.Row="1"
                                               Grid.Column="1"
                                               FontSize="Small"
                                               Text="{Binding Location}"/>
                                        <ImageButton 
                                               VerticalOptions="Start"
                                               HorizontalOptions="End"
                                               Grid.Row="0"
                                               Grid.Column="2"
                                               Source="icon_FavOFF.png" 
                                               Pressed="btnFavoris"/>
                                    </Grid>
                                </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </RelativeLayout>
    </ContentPage.Content>
</ContentPage>